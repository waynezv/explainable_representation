{
    "_comment": "General",
    "random_seed": 1234,
    "num_workers": 0,
    "device": "cuda",
    "device_ids": [0, 1, 2, 3],

    "_comment": "Data",
    "data": {
        "list": "./spectrogram.lst",
        "path": "../data/free-spoken-digit-dataset/processed/spectrograms",
        "num_load": null
    },

    "_comment": "Model",
    "AlexNet": {
        "num_classes": 10
    },

    "_comment": "Optimizer",
    "optimizer": {
        "type": "sgd",
        "lr": 0.001,
        "lr_decay_mul": 0.5,
        "lr_decay_epochs": 2500,
        "momentum": 0.9,
        "weight_decay": 0.001,
        "grad_clip": 5
    },


    "_comment": "Training",
    "batch_size": 100,
    "num_epochs": 10000,

    "_comment": "Testing",
    "valid_freq": 1,
    "num_folds": 5,
    "num_runs": 10,

    "_comment": "Log",
    "checkpoint_dir": "/media/sdd/wzhao/ProJEX/explainable_representation/model_outputs/checkpoints",

    "verbose": false,
    "log_dir": "./model_outputs/logs",
    "log_file": "run_1027_2330",

    "log": {
        "version": 1,
        "disable_existing_loggers": false,

        "formatters": {
            "custom": {
                "format": "%(asctime)s - [%(name)s - %(funcName)-8.8s:%(lineno)-4d] - [%(levelname)-5.5s] - %(message)s",
                "datefmt": "%Y/%m/%d %H:%M"
            }
        },

        "handlers": {
            "console": {
                "class": "logging.StreamHandler",
                "level": "DEBUG",
                "formatter": "custom",
                "stream": "ext://sys.stdout"
            },

            "file": {
                "class": "logging.handlers.RotatingFileHandler",
                "level": "DEBUG",
                "formatter": "custom",
                "filename": "./model_outputs/logs/run_1027_2330",
                "maxBytes": 10485760,
                "backupCount": 20,
                "encoding": "utf8"
            }
        },

        "loggers": {
            "main": {
                "level": "DEBUG",
                "handlers": ["console", "file"],
                "propagate": false
            }
        },

        "root": {
            "level": "DEBUG",
            "handlers": []
        }
    },

    "_comment": "Evaluation",
    "saved_model_dir": "/media/sdd/wzhao/ProJEX/explainable_representation/model_outputs/checkpoints",
    "model_to_eval": ""
}
